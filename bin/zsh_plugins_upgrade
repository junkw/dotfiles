#!/bin/bash

echo "==> Upgrade prezto"
git -C $HOME/.zprezto/ pull && git -C $HOME/.zprezto/ submodule update --init --recursive;

echo -e "\n==> Upgrade enhancd"
git -C $HOME/.zenhancd/ pull;

if [[ `which antigen` ]]; then
	echo -e "\n==> Upgrade antigen"
    antigen selfupdate && antigen update;
fi
