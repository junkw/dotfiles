[user]
	name = Jumpei KAWAMI
	email = don.t.be.trapped.by.dogma@gmail.com

[core]
	whitespace = trailing-space
	quotepath = false

[color]
	ui = auto

[credential]
	helper = osxkeychain

[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less

[diff]
	compactionHeuristic = true
	indentHeuristic = true
	tool = ediff
	guitool = ediff

[difftool "ediff"]
	cmd = ediff.sh $LOCAL $REMOTE $MERGED

[merge]
	tool = ediff

[mergetool "ediff"]
	cmd = ediff.sh $LOCAL $REMOTE $MERGED $BASE
	trustExitCode = true

[push]
	default = simple
	followTags = true

[rerere]
	enabled = true

[svn]
	pushmergeinfo = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge --skip %f
	required = true
	process = git-lfs filter-process

[url "git@github.com:"]
	insteadOf = gh:

[alias]
	branches = branch -a
	cleanup = !git gc --aggressive; git fsck --full
	conflicts = diff --name-only --diff-filter=U
	deep-cleanup = !git repack -a -f --depth=250 --window=250; git prune; git fsck --full
	discard = checkout --
	fetch-all = fetch --all --prune --tags origin
	fixup = "!f() { TARGET=$(git rev-parse "$1"); git commit --fixup=$TARGET ${@:2} && EDITOR=true git rebase -i --autostash --autosquash $TARGET^; }; f"
	graph = log --graph --remotes --branches --tags --decorate --pretty=format:'%C(yellow)%h%Creset %C(auto)%d%Creset %s %C(blue)%an%Creset %C(green)%ar%Creset'
	lfs-checkout = !git checkout && git lfs pull
	lfs-pull = !git pull && git lfs pull
	refuge = stash save --include-untracked
	remotes = remote -v
	stashes = stash list
	tags = tag
	uncommit = reset --mixed HEAD~1
	update = !git fetch-all && git merge --ff origin/master master
	unstage = reset HEAD --
