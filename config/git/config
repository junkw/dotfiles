[user]
	name = Jumpei KAWAMI
	email = don.t.be.trapped.by.dogma@gmail.com

[core]
	whitespace = trailing-space
	quotepath = false

[color]
	ui = auto

[credential]
	helper = osxkeychain

[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less

[diff]
	tool = ediff
	guitool = ediff
	compactionHeuristic = true

[difftool "ediff"]
	cmd = ediff.sh $LOCAL $REMOTE $MERGED

[merge]
	tool = ediff

[mergetool "ediff"]
	cmd = ediff.sh $LOCAL $REMOTE $MERGED $BASE
	trustExitCode = true

[push]
	default = simple

[rerere]
	enabled = true

[svn]
	pushmergeinfo = true

[alias]
	branches = branch -a
	conflicts = diff --name-only --diff-filter=U
	discard = checkout --
	fixup = "!f() { TARGET=$(git rev-parse "$1"); git commit --fixup=$TARGET ${@:2} && EDITOR=true git rebase -i --autostash --autosquash $TARGET^; }; f"
	graph = log --graph --remotes --branches --tags --decorate --pretty=format:'%C(yellow)%h%Creset %C(auto)%d%Creset %s %C(blue)%an%Creset %C(green)%ar%Creset'
	remotes = remote -v
	stashes = stash list
	uncommit = reset --mixed HEAD~1
	unstage = reset HEAD --
	tags = tag

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
