[core]
	whitespace = trailing-space
	quotepath = false

[color]
	ui = auto

[credential]
	helper = osxkeychain

[diff]
	tool = ediff
	guitool = ediff

[difftool "ediff"]
	cmd = ediff.sh $LOCAL $REMOTE $MERGED

[merge]
	tool = ediff

[mergetool "ediff"]
	cmd = ediff.sh $LOCAL $REMOTE $MERGED $BASE
	trustExitCode = true

[push]
	default = simple

[rerere]
	enabled = true

[svn]
	pushmergeinfo = true

[alias]
	graph = log --graph --branches --tags --decorate --pretty=format:'%C(yellow)%h%Creset %C(auto)%d%Creset %s %C(blue)%an%Creset %C(green)%ar%Creset'
	unstage = reset HEAD --
