[general]

accounts   = Worksite

metadata   = ~/.local/share/offlineimap
pythonfile = ~/.config/offlineimap/offlineimap.py

[Account Worksite]

localrepository  = LocalWorksite
remoterepository = RemoteWorksite

status_backend   = sqlite

[Repository LocalWorksite]

type         = GmailMaildir
localfolders = ~/.local/share/mail/

[Repository RemoteWorksite]

type            = Gmail
auth_mechanisms = GSSAPI, CRAM-MD5, PLAIN, LOGIN

remoteuser      = __GMAIL__
remotepasseval  = get_keychain_password("__GMAIL__", "imap.gmail.com")

ssl             = yes
ssl_version     = tls1
sslcacertfile   = /usr/local/etc/openssl/cert.pem
