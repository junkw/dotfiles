# Global
set -g prefix C-z
unbind C-b
bind C-z send-prefix

# Color
source-file ~/opt/tmux-colors-solarized/tmuxcolors-256.conf
set -g status-left '#{?pane_synchronized,#[fg=red],}[#S]'

# Session
set-option -g default-shell /usr/local/bin/zsh
set -g base-index 1
setw -g pane-base-index 1
set-option -g default-terminal "screen-256color"
set-option -g destroy-unattached on

# Window
set-window-option -g mode-keys emacs

bind | split-window -h
bind - split-window -v

bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

bind -r H resize-pane -L 5
bind -r J resize-pane -D 5
bind -r K resize-pane -U 5
bind -r L resize-pane -R 5

bind S set-window-option synchronize-panes

# Mouse
set-option -g mouse on
bind -n WheelUpPane if-shell -F -t = "#{mouse_any_flag}" "send-keys -M" "if -Ft= '#{pane_in_mode}' 'send-keys -M' 'select-pane -t=; copy-mode -e; send-keys -M'"
bind -n WheelDownPane select-pane -t= \; send-keys -M

# Copy
bind-key -t emacs-copy [ begin-selection
bind-key -t emacs-copy M-w copy-pipe "reattach-to-user-namespace pbcopy"
unbind -t emacs-copy Enter
bind-key -t emacs-copy Enter copy-pipe "reattach-to-user-namespace pbcopy"
